<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnitOneActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1000dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_left_24"/>

            <TextView
                android:id="@+id/overall_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_overall_unit1_progress"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_unit_one_header"
                android:layout_gravity="center_horizontal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_margin="20dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <ProgressBar
                    android:id="@+id/progressBarLessonOne"
                    android:layout_height="125dp"
                    android:layout_width="125dp"
                    android:progress="0"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/custom_circular_progress"
                    android:layout_centerInParent="true"  />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewLessonOne"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:layout_centerInParent="true"
                    android:background="@color/babyBlue"
                    app:shapeAppearanceOverlay="@style/roundedImage"
                    android:src="@drawable/baseline_abc_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressBarLessonOne"
                    android:layout_centerHorizontal="true"
                    android:text="@string/tv_lesson_one_header"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="170dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">

                    <ProgressBar
                        android:id="@+id/progressBarLessonTwo"
                        android:layout_height="125dp"
                        android:layout_width="125dp"
                        android:progress="0"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/custom_circular_progress"
                        android:layout_centerInParent="true"  />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageViewLessonTwo"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:layout_centerInParent="true"
                        android:background="@color/babyBlue"
                        app:shapeAppearanceOverlay="@style/roundedImage"
                        android:src="@drawable/baseline_123_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progressBarLessonTwo"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_lesson_two_header"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="170dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp">

                    <ProgressBar
                        android:id="@+id/progressBarLessonThree"
                        android:layout_height="125dp"
                        android:layout_width="125dp"
                        android:progress="12"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/custom_circular_progress_lock"
                        android:layout_centerInParent="true"  />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageViewLessonThree"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@color/babyBlue"
                        android:backgroundTint="@color/gray"
                        app:shapeAppearanceOverlay="@style/roundedImage"
                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_abc_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progressBarLessonThree"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_lesson_three_header"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:enabled="false"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="170dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp">

                    <ProgressBar
                        android:id="@+id/progressBarLessonFour"
                        android:layout_height="125dp"
                        android:layout_width="125dp"
                        android:progress="81"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/custom_circular_progress_lock"
                        android:layout_centerInParent="true"  />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageViewLessonFour"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@color/gray"
                        app:shapeAppearanceOverlay="@style/roundedImage"
                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_color_lens_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progressBarLessonFour"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_lesson_four_header"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:enabled="false" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="170dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp">

                    <ProgressBar
                        android:id="@+id/ProgressBarLessonFive"
                        android:layout_height="125dp"
                        android:layout_width="125dp"
                        android:progress="43"
                        android:indeterminateOnly="false"
                        android:progressDrawable="@drawable/custom_circular_progress_lock"
                        android:layout_centerInParent="true"  />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageViewLessonFive"
                        android:layout_width="63dp"
                        android:layout_height="63dp"
                        android:background="@color/gray"
                        app:shapeAppearanceOverlay="@style/roundedImage"
                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_gesture_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ProgressBarLessonFive"
                        android:layout_centerHorizontal="true"
                        android:text="@string/tv_lesson_five_header"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:enabled="false" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/ProgressBarLessonSix"
                    android:layout_height="125dp"
                    android:layout_width="125dp"
                    android:progress="69"
                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/custom_circular_progress_lock"
                    android:layout_centerInParent="true" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ImageViewLessonSix"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:background="@color/gray"
                    app:shapeAppearanceOverlay="@style/roundedImage"
                    android:layout_centerInParent="true"
                    android:src="@drawable/baseline_123_24" />

                <TextView
                    android:layout_below="@id/ProgressBarLessonSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/tv_lesson_six_header"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:enabled="false" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>